string substr(int pos = 0, int n = npos) const;

void test01()
{
    string str = "abcdefg";
    string subStr = str.substr(1,3);
    cout << "subStr = " << substr << endl;

    string email = "hello@sina.com";
    int pos = email.find("@");
    string username = email.substr(0,pos);
